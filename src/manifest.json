{
  "name": "HightlighIT",
  "description": "⌘⌥⇧H clicks any element whose data‑unique‑id is “Ribbon‑Highlighter”.",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],

  "background": { "service_worker": "background.js" },

  "commands": {
    "trigger-ribbon-highlighter": {
      "suggested_key": { "mac": "command+shift+option+H" },
      "description": "Click the Ribbon‑Highlighter element"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}
